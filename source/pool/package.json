{
  "name": "@airswap/pool",
  "version": "1.1.0",
  "description": "Tokens pooled and claimable using merkle proofs",
  "contributors": [
    "Don Mosites <mosites@gmail.com>"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/airswap/airswap-protocols"
  },
  "scripts": {
    "clean": "rm -rf ./build",
    "coverage": "truffle run coverage",
    "test": "yarn compile; truffle test",
    "compile": "yarn clean; truffle compile",
    "cp_migration_flat": "mkdir -p flatten/; cp contracts/Migrations.sol flatten/",
    "flatten": "truffle run flatten",
    "migrate": "yarn flatten contracts/Imports.sol && yarn cp_migration_flat && truffle migrate --skip-dry-run",
    "verify": "truffle run verify"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.3.0"
  },
  "devDependencies": {
    "@gnosis.pm/mock-contract": "^4.0.0",
    "@airswap/test-utils": "0.1.9",
    "@airswap/merkle": "0.0.1",
    "@airswap/utils": "0.4.2",
    "solidity-coverage": "^0.7.13"
  }
}